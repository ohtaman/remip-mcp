  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "remip-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "build": "tsc && shx cp -r node_modules/pyodide/ dist/pyodide && chmod +x dist/index.js",
    "prepare": "npm run build",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "node --experimental-vm-modules node_modules/jest/bin/jest.js --findRelatedTests --passWithNoTests"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "cross-fetch": "^4.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "node-cache": "^5.1.2",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "pyodide": "^0.28.2",
    "shx": "^0.4.0",
    "tsx": "^4.20.4",
    "zod": "^3.25.76"
  }
}
